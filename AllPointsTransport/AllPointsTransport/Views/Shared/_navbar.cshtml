@model IEnumerable<AllPointsTransport.Models.Navbar>

<style>
    .form-css 
    {
        display: block;
        padding: 15px;
        position: relative;
    }
</style>

 <!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("All Points Transport", "Index", new { controller = "Home" }, new { @class = "navbar-brand" })
    </div>
    <!-- Top Menu Items -->
    <ul class="nav navbar-right top-nav">
        
        @if (Request.IsAuthenticated)
        {
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i>Templates</i></a>
            </li>
            <li>
                <a href='@Url.Action("Index", "APTUsers")'><i>Profiles</i></a>
            </li>
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i>Settings</i></a>
            </li>
             <li class="dropdown">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-css" }))
                {
                    @Html.AntiForgeryToken()           
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.Name <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        @*<li>
                            <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                        </li>*@
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                }
            </li>
        }
        else
        {
            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
      
    </ul>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav side-nav">
            @foreach (var item in Model)
            {
                <li class="@item.activeli">
                    <a href="@Url.Action(item.action, item.controller)"><i class="@item.imageClass"></i> @item.nameOption</a>
                </li>
            }
        </ul>
    </div>
    <!-- /.navbar-collapse -->
</nav>


